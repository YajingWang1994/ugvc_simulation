      <origin rpy="0 ${PI/2} 0" xyz="0 0 0"/>
      <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
    </inertial>
    <collision name="collision">
      <origin rpy="0 ${PI/2} 0" xyz="0 0 0"/>
      <geometry>
