    <child link="right_front_flipper_wheel_1"/>
    <origin rpy="0 0 ${PI}" xyz="${chassis_width/2+main_wheel_length+flipper_thickness+flipper_wheel_length/2} ${chassis_length/2} ${wheel_radius}"/>
